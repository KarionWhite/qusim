{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}\\quantennetzwerk-app"
            },
            "command": "go",
            "args": [
                "build",
                "-tags",
                "dev",
                "-gcflags",
                "all=-N -l",
                "-o",
                "${workspaceFolder}\\quantennetzwerk-app\\build\\bin\\quantennetzwerk-app.exe"
            ]
        },
        {
            "label": "wails dev",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}\\quantennetzwerk-app"
            },
            "command": "wails",
            "args": [
                "dev",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}